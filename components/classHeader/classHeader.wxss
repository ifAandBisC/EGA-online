.banner-body {
  position: fixed;
  margin: 0;
  padding: 0;
  top: 0;
  left: 0;
  right: 0;
  color: white;
  z-index: 900;
}

.banner-image {
  position: inherit;
  width: 100%;
  height: 250rpx;
  z-index: 900;
}

.banner-inner {
  position: fixed;
  top: 0;
  left: 0;
  margin: 65rpx 110rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 25rpx;
  z-index: 920;
}

.banner-button {
  height: 90rpx;
  width: 120rpx;
  color: #339999;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.banner-button-text{
  font-size: 20rpx;
  margin: 10rpx 20rpx;
}

.banner-inner-text {
  margin: 15rpx 0 15rpx 30rpx;
}

.banner-inner-image {
  position: fixed;
  top: 0;
  left: 0;
  margin: 65rpx 80rpx;
  height: 120rpx;
  width: 80%;
  z-index: 910;
}
