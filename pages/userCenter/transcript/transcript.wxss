@import "/template/question/question.wxss";

page {
  height: 100%;
}

.container {
  padding-top: 190rpx;
}

.problem-container {
  width: 100%;
  height: 9999rpx;
}

.progress-container {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 165rpx;
  background: white;
  z-index: 999;
}

.progress-shadow {
  position: fixed;
  width: 100%;
  height: 9999rpx;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
}

.progress-display {
  width: 100%;
  margin-top: 30rpx;
  padding: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.progress-each {
  border-radius: 50%;
  margin: 30rpx 28rpx;

  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #979797;
}

.done {
  width: 90rpx;
  height: 90rpx;
  background-color: #E7E7E7;
}

.undone {
  width: 88rpx;
  height: 88rpx;
  border: 1rpx solid rgba(151, 151, 151, 1);
  background-color: white;
}

.current {
  width: 90rpx;
  height: 90rpx;
  background-color: #A8E1D8;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgba(245, 245, 245, 1);
  display: flex;
  align-items: flex-start;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 44rpx;
  height: 55rpx;
  margin: 15rpx auto;
  color: #666;
}

.tab-bar-item cover-view {
  font-size: 20rpx;
  margin-bottom: rpx;
}

.transcript-title {
  font-size: 46rpx;
  font-weight: bolder;
  line-height: 46rpx;
  margin: 40rpx 60rpx;
}

.transcript-detail {
  width: 630rpx;
  height: 200rpx;
  margin: 8rpx auto;
  padding: 20rpx 28rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 30rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 18rpx;
}

.transcript-exam-name {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.transcript-info {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.transcript-teacher-name {
  font-size: 24rpx;
  font-weight: lighter;
  line-height: 30rpx;
}

.transcript-submit-time {
  margin-top: 46rpx;
  width: 420rpx;
  font-size: 24rpx;
  font-weight: lighter;
  line-height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.transcript-submit-content {
  width: 300rpx;
  font-size: 26rpx;
  font-weight: normal;
  line-height: 30rpx;
}

.transcript-score {
  width: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.transcript-score-item {
  width: 160rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.transcript-score-title {
  width: 140rpx;
  font-size: 20rpx;
  font-weight: lighter;
}

.transcript-score-value {
  font-weight: bold;
  color: #91DBE5;
}

.transcript-score-sum {
  font-size: 36rpx;
  font-weight: bolder;
  color: #84E5C5;
}