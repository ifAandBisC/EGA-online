@import "/template/question/question.wxss";

page {
  height: 80%;
}

.container {
  padding-top: 190rpx;
  height: 100%;
}

.problem-container {
  width: 100%;
  height: 100%;
}

.progress-container {
  width: 100%;
  height: 850rpx;
  position: fixed;
  bottom: 120rpx;
  background: white;
  z-index: 999;
}

.progress-shadow {
  position: fixed;
  width: 100%;
  height: 9999rpx;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
}

.progress-display {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}

.progress-each {
  border-radius: 50%;
  margin: 30rpx 28rpx;

  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #979797;
}

.done {
  width: 90rpx;
  height: 90rpx;
  background-color: #E7E7E7;
}

.undone {
  width: 88rpx;
  height: 88rpx;
  border: 1rpx solid rgba(151, 151, 151, 1);
  background-color: white;
}

.current {
  width: 90rpx;
  height: 90rpx;
  background-color: #A8E1D8;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: rgba(245, 245, 245, 1);
  display: flex;
  align-items: flex-start;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 40rpx;
  height: 40rpx;
  margin: 15rpx auto;
  color: #666;
}

.tab-bar-item cover-view {
  font-size: 20rpx;
  margin-bottom: rpx;
}
